datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  posts     Post[]    @relation("Post_author")
  createdAt DateTime? @default(now())
}

model Project {
  id                   String     @id @default(cuid())
  title                String     @default("")
  tags                 Tag[]      @relation("Project_tags")
  description          String     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  coverImage_filesize  Int?
  coverImage_extension String?
  coverImage_width     Int?
  coverImage_height    Int?
  coverImage_id        String?
  documents            Document[] @relation("Document_projects")
}

model Document {
  id                   String    @id @default(cuid())
  title                String    @default("")
  description          String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  coverImage_filesize  Int?
  coverImage_extension String?
  coverImage_width     Int?
  coverImage_height    Int?
  coverImage_id        String?
  files                File[]    @relation("File_document")
  projects             Project[] @relation("Document_projects")
}

model File {
  id                  String    @id @default(cuid())
  title               String    @default("")
  description         String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  thumbnail_filesize  Int?
  thumbnail_extension String?
  thumbnail_width     Int?
  thumbnail_height    Int?
  thumbnail_id        String?
  file_filesize       Int?
  file_filename       String?
  document            Document? @relation("File_document", fields: [documentId], references: [id])
  documentId          String?   @map("document")

  @@index([documentId])
}

model Post {
  id       String  @id @default(cuid())
  title    String  @default("")
  content  String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  author   User?   @relation("Post_author", fields: [authorId], references: [id])
  authorId String? @map("author")

  @@index([authorId])
}

model Tag {
  id       String    @id @default(cuid())
  name     String    @default("")
  projects Project[] @relation("Project_tags")
}
